<%- include('partials/header'); -%>

<h1>Home</h1>

<p> <%= homeStartingContent %> </p>

<% posts.forEach(post => { %>
<% let postBody = post.body; %>
<% if (posts.length !== 0) { %>
<% postBody = postBody.length > 100 ? postBody.substring(0, 100) + '...' : postBody; %>
<% } %>

<h2><%= post.title %></h2>
<p class="text-area"><%= postBody %> <a href="/posts/<%=post._id%>">Read More</a></p>
<% }); %>

<%- include('partials/footer'); -%>